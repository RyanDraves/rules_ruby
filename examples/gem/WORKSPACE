local_repository(
    name = "rules_ruby",
    path = "../..",
)

load("@rules_ruby//ruby:deps.bzl", "rb_bundle", "rb_download")
load("ruby_version.bzl", "RUBY_VERSION")

rb_download(version = RUBY_VERSION)

rb_bundle(
    name = "bundle",
    gemfile = "//:Gemfile",
    srcs = [
        "//:gem.gemspec",
        "//:lib/gem/version.rb",
    ]
)
